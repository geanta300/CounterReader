<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Month and Year"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textFileName1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="File Name 1"
        android:layout_below="@+id/textTitle"/>

    <TextView
        android:id="@+id/textFileName2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="File Name 2"
        android:layout_below="@+id/textFileName1"/>

    <Button
        android:id="@+id/buttonShareFiles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share Files"
        android:layout_below="@+id/textFileName2"/>

</RelativeLayout>